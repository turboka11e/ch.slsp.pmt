{% extends "base.html.twig" %}

{% block body %}
	{% block nav %}

		<nav class="navbar navbar-expand-md navbar-light bg-light bg-gradient border-bottom">
			<div class="container-xl">
				<a class="navbar-brand" href="{{ path('home') }}">
					<img class="d-inline-block align-text-center" src="{{ asset('images/SLSP_Logo.svg') }}" width="50" height="50">
					Project Management
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">

					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link {{ homelink|default('') }}" href="{{ path('home') }}">Home</a>
						</li>
					</ul>
					<ul class="navbar-nav">
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								{{ app.user.name }}
								{{ app.user.surname }}
							</a>
							<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
								<li>
									<a class="dropdown-item" href="{{ path('app_logout') }}">
										Logout
									</a>
								</li>
							</ul>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		{% for message in app.flashes('success') %}
			<div class="mt-3 container-xl">
				<div class="alert alert-success text-center">
					{{ message }}
				</div>
			</div>
		{% endfor %}

		{% for message in app.flashes('error') %}
			<div class="mt-3 container-xl">
				<div class="alert alert-warning text-center">
					{{ message }}
				</div>
			</div>
		{% endfor %}

		{% for message in app.flashes('danger') %}
			<div class="mt-3 container-xl">
				<div class="alert alert-danger text-center">
					{{ message }}
				</div>
			</div>
		{% endfor %}


		{% block content %}{% endblock %}


	{% endblock %}
{% endblock %}
