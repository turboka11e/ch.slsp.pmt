{% extends "base.html.twig" %}

{% block body %}
	{% block nav %}

		<nav class="navbar navbar-expand-md navbar-light bg-light bg-gradient border-bottom">
			<div class="container-md">
				<a class="mx-2 navbar-brand" href="/Projectmanagement/public/index.php/home">
					<img class="mx-1" src="{{ asset('images/SLSP_Logo.svg') }}" width="50" height="50">
					Monatsplanung
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav">
						<li class="nav-item dropdown">
							<a class="mx-2 nav-link" href="/Projectmanagement/public/index.php/home">Home</a>
						</li>
					</ul>
					<p class="ms-auto my-auto text-secondary">{{ app.user.name }}
						{{ app.user.surname }}</p>
					<a type="button" class="ms-3 btn btn-outline-danger" href="logout">Logout</a>
				</div>
			</div>
		</nav>

        {% for message in app.flashes('success') %}
        <div class="mt-3 container-md">
            <div class="alert alert-success text-center">
                {{ message }}
            </div>
        </div>
	    {% endfor %}

		<div class="mt-3 container-md bg-white">
			{% block content %}{% endblock %}
		</div>

	{% endblock %}
{% endblock %}
